        <script type="text/javascript">
            loadUser();
            if ( !g_user || !g_user.active )
                window.location.replace("/ui");
        </script>
        <title>DataFed Main</title>
    </head>
    <body>
    <div class="col-flex" style="height:100%;width:100%">
        <!-- div class="ui-widget-header row-flex" style="flex:none;background-image:url('/banner.jpg');background-repeat:no-repeat;background-position:right center;align-items:center;padding:.25em .5em" -->
        <div class="ui-widget-header row-flex" style="flex:none;align-items:center;padding:.25em .5em">
            <div style="flex:1 1 100%;font-size:2em;">DataFed</div>
            <div style="flex:none"><button class="btn" onclick="window.open('/ui/docs','sdms-docs')">Help</button>&nbsp<button class="btn" onclick="logout()">Log Out</button></div>
        </div>
        <div id="content" class="content" style="flex:1;min-height:0">
            <% include 'tab_browser.ect' %>
        </div>
        <div class="ui-widget-header" style="flex:none;padding:.25em">
            <div class="row-flex">
                <div style="flex:none" >User: <span id="uname"></span></div>
                <div style="flex:none" >&nbsp&nbsp&nbsp</div>
                <div id="status_text" class="ui-widget ui-widget-content no-border" style="height:1.1em;flex:1 1 100%;text-align:center;font-size:.9em;font-style:normal"></div>
            </div>
        </div>
    </div>
    </body>
    <script>
        window.name = 'sdms_target';
        document.getElementById("uname").innerHTML = g_user.name;

        $(".btn").button();
        //$( document ).tooltip({ show: false, hide: false});
        $("button").tooltip({ show: { effect: "slideDown", delay: 500 }});
        $("input").tooltip({ show: { effect: "slideDown", delay: 500 }});

        var g_theme = "<%- @theme %>";
        var g_opts = { page_sz: 20, xfr_hist: 24 };
        var tab_browser;

        userView( g_user.uid, true, function( ok, user ){
            if ( ok && user ){
                console.log("userView (init):",user);
                g_user.isAdmin = user.isAdmin;
                g_user.isRepoAdmin = user.isRepoAdmin;
                if ( user.options ){
                    console.log("user opts:",user.options);
                    g_opts = JSON.parse( user.options );
                }

                tab_browser = makeBrowserTab();
                setStatusText("DataFed Ready");
            }else{
                dlgAlert("System Error","Unable to access user record");
            }
        });

    </script>
</html>
